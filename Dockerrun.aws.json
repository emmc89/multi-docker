{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "emoscoso/multi-client",
            "hostname": "client",
            "essential": false, 
            "memory": 128
        },
        {
            "name": "server",
            "image": "emoscoso/multi-server",
            "_comment":"esta es una etiqueta de comntario cambiamos en el archi de ruteo de nginx de server a api",
            "hostname": "api", 
            "essential": false,
            "memory": 128 
        },
        {
            "name": "worker",
            "image": "emoscoso/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128 
        },
        {
            "name": "nginx",
            "image": "emoscoso/multi-nginx",
            "hostname": "client",
            "essential": true,
            "memory": 128,
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links":["client","server"]
        }
    ]
}